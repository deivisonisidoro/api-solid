{
  "openapi":"3.0.0",
  "info": { 
    "title": "Solid API",
    "description": "This api has as main objective the control of the calls made by the clients",
    "contact": {
      "email": "deivisonisidoro@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers":[
    {
      "url": "http://localhost:3333/",
      "description": "API of test"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Register user",
        "description": "This route will responsible for registering the new user",
        "tags": ["Users"],
        "requestBody":{
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples":{
                "user":{
                  "value":{
                    "name": "Deivison Isidoro",
                    "email": "deivison@loldesigner.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "User already exists."
          },
          "201":{
            "description": "Created",
            "content": {
              "application/json":{
                "schema": {
                  "type":"object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
           }
        }
      },
      "get":{
        "summary": "Get all users",
        "description": "This route will be responsible for get  all registered users",
        "tags": ["Users"],
        "responses":{
          "400": {
            "description": "No user found"
          },
          "200":{
            "description": "OK",
            "content": {
              "application/json":{
                "schema": {
                  "type":"array",
                  "items":{
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
           }
        }
      }
    },
    "/users/{id}": {
      "put": {
        "summary": "Update user",
        "description": "This route will responsible for to do the update of a user",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User's id for update",
            "required": true
          }
        ],
        "requestBody":{
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples":{
                "user":{
                  "value":{
                    "name": "Deivison Isidoro",
                    "email": "deivison@loldesigner.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "User does not exits!"
          },
          "200":{
            "description": "Updated",
            "content": {
              "application/json":{
                "schema": {
                  "type":"object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
           }
        }
      },
      "delete":{
        "summary": "Delete user",
        "description": "This route will responsible for to do the delete of a user",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User's id for delete",
            "required": true
          }
        ],
        "responses":{
          "400": {
            "description": "User does not exits!"
          },
          "204":{
            "description": "Deleted"
           }
        }
      }
    },
    "/categories":{
      "post": {
        "summary": "Register category",
        "description": "This route will responsible for registering the new category",
        "tags": ["Categories"],
        "requestBody":{
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/Category"
              },
              "examples":{
                "category":{
                  "value":{
                    "name": "Test Category",
                    "description": "test category"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "Category already exists."
          },
          "201":{
            "description": "Created",
            "content": {
              "application/json":{
                "schema": {
                  "type":"object",
                  "$ref": "#/components/schemas/Category"
                }
              }
            }
           }
        }
      },
      "get":{
        "summary": "Get all categories",
        "description": "This route will be responsible for get  all registered categories",
        "tags": ["Categories"],
        "responses":{
          "400": {
            "description": "No category found"
          },
          "200":{
            "description": "OK",
            "content": {
              "application/json":{
                "schema": {
                  "type":"array",
                  "items":{
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
           }
        }
      }
    },
    "/categories/{id}": {
      "put": {
        "summary": "Update category",
        "description": "This route will responsible for to do the update of a category",
        "tags": ["Categories"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Category's id for update",
            "required": true
          }
        ],
        "requestBody":{
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/Category"
              },
              "examples":{
                "category":{
                  "value":{
                    "name": "Test Category",
                    "description": "test category"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "Category does not exist"
          },
          "200":{
            "description": "Updated",
            "content": {
              "application/json":{
                "schema": {
                  "type":"object",
                  "$ref": "#/components/schemas/Category"
                }
              }
            }
           }
        }
      },
      "delete":{
        "summary": "Delete category",
        "description": "This route will responsible for to do the delete of a category",
        "tags": ["Categories"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Category's id for delete",
            "required": true
          }
        ],
        "responses":{
          "400": {
            "description": "Category does not exist"
          },
          "204":{
            "description": "Deleted"
           }
        }
      }
    },
    "/login":{
      "post": {
        "summary": "Login user",
        "description": "This route will responsible for to do the login of user",
        "tags": ["Login"],
        "requestBody":{
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples":{
                "user":{
                  "value":{
                    "email": "deivison@loldesigner.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "Email or password incorret."
          },
          "200":{
            "description": "Ok",
            "content": {
              "application/json":{
                "schema": {
                  "type":"object",
                  "$ref": "#/components/schemas/Login"
                }
              }
            }
           }
        }
      }
    },
    "/refresh-token":{
      "post": {
        "summary": "Refresh Token",
        "description": "This route will responsible for to refresh token ",
        "tags": ["Refresh Token"],
        "requestBody":{
          "content": {
            "application/json":{
              "schema": {
                "$ref": "#/components/schemas/Token"
              },
              "examples":{
                "user":{
                  "value":{
                    "refresh_token": "Copy the token ID generated at login"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "400": {
            "description": "Refresh token is invalid."
          },
          "200":{
            "description": "Ok",
            "content": {
              "application/json":{
                "schema": {
                  "type":"object",
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
           }
        }
      }
    }
  },
  "components":{
    "securitySchemes":{
      "BearerAuth":{
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas":{
      "User":{
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Login":{
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Category":{
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}